<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="8dp"
    android:paddingEnd="8dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/videoThumbnailImageView"
        android:layout_width="192dp"
        android:layout_height="192dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:contentDescription="@string/a11y_thumbnail"/>

    <ImageView
        android:id="@+id/videoPlayIconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/videoThumbnailImageView"
        app:layout_constraintBottom_toBottomOf="@+id/videoThumbnailImageView"
        android:contentDescription="@string/a11y_thumbnail"
        android:src="@android:drawable/ic_media_play"/>

    <TextView
        android:id="@+id/videoTitleTextView"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/videoThumbnailImageView"
        app:layout_constraintTop_toBottomOf="@+id/videoThumbnailImageView"
        tools:text="Some awesome cool video title goes here"/>

</android.support.constraint.ConstraintLayout>